@import "mixins/border";
@import "mixins/colors";
@import "mixins/pos";
@import "mixins/gradient";
@import "mixins/box";

.TableTree
  background-color bg-color
  border-radius 4px
  font-family Helvetica, Arial, sans-serif
  font-size 12px
  position relative
 
  > #titlebar
    color #FFF
    font-weight bold
    line-height 10px
    padding 5px 5px 3px 5px
    letter-spacing 1px

  > #rows
    border-radius 0,0,4px,4px

    > #headerrow
      display none
      abspos 0px 0px false 0px
      gradient #666 #555
      color #FFF
      line-height 14px
      height 15px
      z-index 5
      box-shadow 0 0 4px #000

    .NodeRow.ROOT

      > .Node
        display none
