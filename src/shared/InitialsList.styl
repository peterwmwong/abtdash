@import 'mixins/border'
@import 'mixins/box'
@import 'mixins/colors'

.InitialsList
  display inline-block

  > li
    display inline
    margin 0 0 0 5px
    text-align center

    &:first-child
      margin 0

  > .currentUser
    background-color lighten(#36729F,5%)
    border-radius 4px
    color text-color
    font-weight bold
    padding 0px 4px 1px 4px
    border 1px solid rgba(lighten(#36729F,100%),.5)
    box-shadow 0px 1px 2px rgba(#000,.5)
    text-shadow none
    