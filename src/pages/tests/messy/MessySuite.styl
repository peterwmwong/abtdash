@import 'mixins/badge';
@import 'mixins/border';
@import 'mixins/colors';
@import 'mixins/box';
@import 'mixins/gradient';
@import 'mixins/pos';
@import 'mixins/transition';
@import 'mixins/triangle';

.MessySuite
  border-radius 3px 3px 0 0
  font-family Helvetica, Arial, sans-serif
  position relative
  z-index 1

  &.expanded
    bg-selected-gradient()
    box-shadow 0px 1px 2px shadow-color

    #bar
      #suiteName
        > #package
          color text-color-dark
        > .name 
          color text-color
          font-weight bold
      text-shadow 1px 1px 0px #444
      z-index 2 

      &:after
        content ""
        abspos 0px 0px 0px 0px
        z-index -1

      > #expando
        border-color #FFF transparent transparent transparent
        left 8px
        top 13px

      #nav
        #issues > .label
          text-shadow 1px 1px 0px shadow-color
          color text-color

  .badge-red
    badge badge-red

  .badge-yellow
    badge badge-yellow

  .badge-gray
    badge badge-gray

  .badge-green
    badge badge-green

  #bar
    border-radius 3px
    height 28px
    position relative
    z-index 2

    > #expando
      display block
      position absolute
      left 10px
      top 11px
      border-color transparent transparent transparent bg-selected-color-light
      border-style solid
      border-width 4px
      height 0
      width 0

    > #suiteName
      abspos 2px 0px 0px 23px
      line-height 27px
      height 100%
      z-index 1

      display inline-block
      font-size 14px
      font-weight normal
      overflow hidden
      text-overflow ellipsis
      white-space nowrap

      > #package
        color text-disabled-color

      > .name
        color text-color-dark
        text-decoration none
        position relative

        &:hover
          text-decoration underline
          position relative



    > #nav
      abspos 2px false 0px 5px
      padding-right 10px
      z-index 2

      > *
        display inline-block
        height 100%

      > #issues
        vertical-align bottom
        position relative
        min-width 100px
        line-height 25px

        > .label 
          color text-color-dark
          font-weight bold
          text-align left
          transition color 100ms ease

        > .countGroup

          > .count
            padding 0 4px 0 4px
            position relative
            min-width 16px

