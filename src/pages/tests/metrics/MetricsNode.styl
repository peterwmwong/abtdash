@import 'mixins/pos';
@import 'mixins/gradient';

.MetricsNode
  overflow hidden
  height 20px
  line-height 20px
  position relative

  > #expando
    display block
    position absolute
    left 5px
    top 8px
    border-color transparent transparent transparent #666
    border-style solid
    border-width 4px
    height 0
    width 0

    &.expanded
      left 3px
      top 10px
      border-color #222 transparent transparent transparent

  > .nameContainer
    position absolute
    left 0px
    right 200px
    top 1px
    z-index 1

    > .name
      font-style normal

  > .counts
    display inline-block
    padding-right 5px
    width 200px
    position absolute
    right 0
    z-index 5

    > *
      display inline-block
      position absolute 

      &.ats
        width 100px
        right 0px

      &.chumpTasks
        right 103px 
        width 100px


