@import 'mixins/border';
@import 'mixins/box';
@import 'mixins/colors';
@import 'mixins/pos';
@import 'mixins/transition';

.TestResultsGraph
  box-shadow inset 0px 1px 3px rgba(0,0,0,.3)
  background-color rgba(0,0,0,.4)
  border-radius 3px
  position relative
  padding-left 5px
  min-width 205px
  min-height 70px

  > .LoadingIndicator
    margin-top 16px

  > table
    width 100%

  .graphContainer
    width 125px
    height 63px
    padding 2px 0 2px 0
    position relative
    margin-bottom 3px

  .labelRow
    text-align center
    font-size 18px
    font-weight bold
    vertical-align middle
    padding 0 12px 0 8px
    color desaturate(lighten(#62872C,30%),20%)
    > *
      opacity .5
      padding-top 2px
    >.label
      padding-top 0
    >.count
      padding-top 5px
      opacity 1
    >.when
      font-size 10px
      min-width 50px
    &.fail
      color desaturate(lighten(badge-red,30%),30%)

