@import 'mixins/border';
@import 'mixins/colors';
@import 'mixins/pos';
@import 'mixins/transition';

triUpShape(borderSize = 10px, borderColor, tranColor)
  tranColor2 = rgba(tranColor,0)
  content ""
  display block
  border-color tranColor2 tranColor2 borderColor tranColor2
  border-style solid
  border-width borderSize
  height 0
  width 0
  z-index 2 

triUp(size=8px,fgcolor,bordercolor,offset=1px,t=0px,r=0px,b=0px,l=0px)
  &:before
    abspos t r b l
    triUpShape size bordercolor bordercolor

  &:after
    abspos (t + offset) r b l
    triUpShape size fgcolor bordercolor

.DashboardPage
  font-family Helvetica, Arial, sans-serif
  background-color bg-color-dark
  width 100%
  height 100%
  overflow auto
  z-index 1

  > .noStories
    color lighten(bg-color-light,20%)
    font-weight bold
    padding 20px 0 0 0
    text-align center

  > .LoadingIndicator
    abspos 130px 0px 0px 0px
    z-index 999

  > .stats
    width 100%
    height 85px
    gradient bg-color-dark shadow-color
    position relative
    overflow hidden
    padding-top 15px
    font-size 8px
    text-align center

    &:before
      content ""
      abspos 0px -15px -1px -15px
      box-shadow inset 0px 0px 15px #1D1D1D

    > *
      display inline-block

    > .TestResultsGraph
      vertical-align top
      margin 0 5px 0 5px

    red = lighten(saturate(badge-red,0%),0%)
    > .IterationChooser
      margin-right 30px
  
  > .myStoryDivider
    gradient lighten(shadow-color,3%) shadow-color
    border-top 1px solid rgba(#000,.3)
    border-bottom 1px solid rgba(#000,.3)
    color #777
    font-weight bold
    font-size 9px
    letter-spacing 1px
    position relative
    padding 5px 0 6px 38px
    text-shadow 0px -1px 0px rgba(#000,.5)
    z-index 100

    .InitialsList
      margin 0 5px 0 0
      
      .currentUser
        border-radius 3px
        padding 0 4px 0 4px
        opacity .7

    .leftTri
      triUp 4px #555 rgba(#000,.3) 1px 3px 0px 0px 20px