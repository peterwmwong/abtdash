@import 'mixins/border'
@import 'mixins/pos'
@import 'mixins/colors'
@import 'mixins/transition'

.SearchInput
  maincolor = #2B597C
  text-align right
  position relative
  height 18px

  > #searchInputContainer
    abspos -2px 0px 0px 0px

    > #searchinput
      box-sizing border-box
      -moz-box-sizing border-box
      color rgba(maincolor,.7)
      display block
      font-style italic
      transition background-color 250ms ease
      background-color #AAC9E0
      border 0px none
      border-radius 9px
      box-shadow inset 0px 1px 1px rgba(#000,.4)
      font-family Helvetica, Arial, sans-serif
      font-size 13px
      padding-left 20px
      width 100%
      height 18px

      &::-webkit-input-placeholder, &::-moz-placeholder
        color rgba(maincolor,.7)
        font-style italic

      &:focus
        color maincolor
        font-style normal
        outline none
        background-color #FFF

  > #searchIcon
    iconcolor = maincolor
    abspos 1px false false 3px
    width 10px
    height 10px

    > #circle
      abspos 0px 0px 0px 0px
      width 6px
      height 6px
      border 2px solid iconcolor
      background transparent
      border-radius 12px

    > #rect
      abspos 0px false 0px 9px
      width 2px
      height 6px
      margin-top 7px
      -webkit-transform rotate(-45deg)
      -moz-transform rotate(-45deg)
      -o-transform rotate(-45deg)
      transform rotate(-45deg)
      background iconcolor

