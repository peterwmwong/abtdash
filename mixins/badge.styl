@import 'mixins/box';
@import 'mixins/gradient';
@import 'mixins/pos';

badge(bcolor,fontsize=14px)
  color #FFF
  display inline-block
  font-size fontsize
  font-weight bold
  position relative
  text-align center
  text-shadow 0px 1px 2px #000
  z-index 2

  &:after
    abspos 3px 0px 4px 0px
    content ""
    gradient rgba(bcolor,.3) rgba(bcolor,.8) 0% 70%
    border-radius 3px
    box-shadow inset 0px 1px 2px rgba(0,0,0,.7)
    z-index -1

